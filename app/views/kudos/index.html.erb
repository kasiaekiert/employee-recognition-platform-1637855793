<h1>Kudos</h1>

<table class="table table-success table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Employee</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td class="table-primary"><%= kudo.title %></td>
        <td class="table-primary"><%= kudo.content %></td>
        <td class="table-primary"><%= kudo.employee_id %></td>
        <td class="table-primary"><%= kudo.created_at %></td>
        <td class="table-primary"><%= link_to "Edit this Kudo", edit_kudo_path(kudo) %>
        <%= link_to 'Destroy this kudo', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create New Kudo", new_kudo_path %>
